  const toggleBtn = document.getElementById("nav-toggle");
  const mobileMenu = document.getElementById("mobile-menu");

  toggleBtn.addEventListener("click", () => {
    mobileMenu.classList.toggle("active");
    toggleBtn.classList.toggle("open");
  });
